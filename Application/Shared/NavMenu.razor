<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Bunkers and Badasses</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="gun">
                <span class="oi oi-fire" aria-hidden="true"></span> Generate Guns
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shield">
                <span class="oi oi-shield" aria-hidden="true"></span> Generate Shields
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="grenade">
                <span class="oi oi-sun" aria-hidden="true"></span> Generate Grenades
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="potion">
                <span class="oi oi-beaker" aria-hidden="true"></span> Generate Potions
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
